
#include <layer2/ethernet.repy>
#include <util/send.repy>

class Switch:
  def __init__(self):
    self.mac_table = {}
  def handle(self, dev, p):
    ether = EthernetHeader(p)
    self.mac_table[ether.src] = dev
    dev = self.mac_table.get(ether.dst)
    send(dev, EthernetHeader(ether.dst, ether.src, ether.type, ether.payload).encode())
