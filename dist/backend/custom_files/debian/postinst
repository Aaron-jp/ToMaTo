#!/bin/sh
# postinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure)
        getent passwd tomato > /dev/null || adduser --quiet --system --home /var/lib/tomato \
            --no-create-home --gecos 'ToMaTo' --group tomato
        
        [ -f /etc/tomato/backend.pem ] || openssl req -new -x509 -days 1000 -nodes -out /etc/tomato/backend.pem -keyout /etc/tomato/backend.pem -subj /O=`hostname`/ -batch

        chown -R root:tomato /etc/tomato
        chown -R tomato:tomato /usr/share/tomato/backend
        chmod 640 /etc/tomato/backend.conf /etc/tomato/backend.pem
        chown tomato:tomato /var/lib/tomato /var/log/tomato
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

. /usr/share/debconf/confmodule
# dbc_dbtypes="pgsql"
. /usr/share/dbconfig-common/dpkg/postinst.pgsql
dbc_go tomato $@

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
